include LICENCE RELEASE-NOTES AUTHORS
include README.md
include electrum-hemis.desktop
include *.py
include run_electrum_hemis
include org.it4f.electrum-hemis.metainfo.xml
recursive-include packages *.py
recursive-include packages cacert.pem

include contrib/requirements/requirements*.txt
include contrib/deterministic-build/requirements*.txt
include contrib/*.sh

graft electrum_hemis
prune tests
graft contrib/udev

exclude electrum_hemis/*.so
exclude electrum_hemis/*.so.0
exclude electrum_hemis/*.dll
exclude electrum_hemis/*.dylib

global-exclude __pycache__
global-exclude *.py[co~]
global-exclude *.py.orig
global-exclude *.py.rej
global-exclude .git

